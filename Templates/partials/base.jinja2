<!-- /Templates/partials/base.html -->

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- styles -->
		<!-- styles for Bootstrap -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

		<!-- custom styles -->
		<link href="/static/css/markdown.css" rel="stylesheet">
		<link href="/static/css/styles.css" rel="stylesheet">
	<!-- /styles -->

	<!-- scripts -->
		<!-- script for Bootstrap -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

		<!-- marked.js -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/marked/4.3.0/marked.min.js"></script>

		<!-- utility scripts -->
		<script src="/static/js/utils.js"></script>
	<!-- /scripts -->

	<title>WebLearn</title>
</head>
<body>

	<main class="container-fluid">
		<div class="row flex-nowrap">

			<!-- Sidebar -->
			<nav class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark" id="sidebar">
				<div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100 pt-4 sticky-top">

					<!-- Title link -->
					<a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
						<span class="fs-5 d-none d-sm-inline">WebLearn</span>
					</a>

					<!-- Links -->
					<ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
						{# logged in #}
						{%- if "username" in session -%}
						<li>
							<a href="{{ url_for("web.profile", username=session["username"]) }}" class="nav-link px-0 align-middle">
								<i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">My Profile</span>
							</a>
						</li>
						<li class="nav-item">
							<a href="{{ url_for("web.courses") }}" class="nav-link align-middle px-0">
								<i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Courses</span>
							</a>
						</li>
						<li class="nav-item">
							<a href="{{ url_for("web.challenges") }}" class="nav-link align-middle px-0">
								<i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Challenges</span>
							</a>
						</li>
						<li class="nav-item">
							<a href="{{ url_for("web.scoreboard") }}" class="nav-link align-middle px-0">
								<i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Scoreboard</span>
							</a>
						</li>
						<li class="nav-item">
							<a href="{{ url_for("web.logout") }}" class="nav-link align-middle px-0">
								<i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Logout</span>
							</a>
						</li>
						{# not logged in #}
						{%- else -%}
						<li>
							<a href="{{ url_for("web.login") }}" class="nav-link px-0 align-middle">
								<i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Login</span>
							</a>
						</li>
						<li>
							<a href="{{ url_for("web.register") }}" class="nav-link px-0 align-middle">
								<i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Register</span>
							</a>
						</li>
						{%- endif -%}
					</ul>
					<hr>
					<div class="dropdown pb-4">

						<!-- User profile -->
						{%- if "username" in session -%}

						<span class="d-none d-sm-inline mx-1">User: {{ session["username"] }}</span>

						{%- endif -%}
						<!-- /User profile -->

					</div>
				</div>
			</nav>
			<!-- /Sidebar -->

			<article id="content" class="col py-3 px-4 opacity-0">
				<h1 id="header" class="pt-4">{% block title %}{% endblock %}</h1>
				<hr>
				{% block content %}{% endblock %}
			</article>
		</div>
	</main>
</body>
</html>